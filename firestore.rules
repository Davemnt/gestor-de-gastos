rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== REGLAS DE PRODUCCIÓN ====================
    // Reglas permisivas para facilitar uso pero con validaciones básicas
    
    // Colección de configuración - Lectura y escritura permitida
    match /configuracion/{document=**} {
      allow read, write: if true;
    }
    
    // Colección de gastos - Lectura y escritura permitida
    match /gastos/{gastoId} {
      allow read, write: if true;
    }
    
    // Colección de prueba
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // Todas las demás colecciones
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
