rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== REGLAS PARA VERSIÓN DEMO ====================
    // Estas reglas son PERMISIVAS para permitir probar la aplicación
    // ⚠️ NO USAR EN PRODUCCIÓN
    
    // Colección de configuración - Lectura y escritura pública
    match /configuracion/{document=**} {
      allow read, write: if true;  // Permitir todo para configuración demo
    }
    
    // Colección de gastos - Lectura y escritura pública
    match /gastos/{gastoId} {
      allow read, write: if true;  // Permitir todo para demo
    }
    
    // Colección de prueba - Escritura permitida
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // Todas las demás colecciones - Permitir todo para demo
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
