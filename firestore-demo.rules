rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== REGLAS PARA VERSIÓN DEMO ====================
    // Estas reglas permiten que cualquiera pueda probar la aplicación
    // pero con limitaciones para evitar abusos
    
    // Colección de configuración - Solo lectura pública
    match /configuracion/{document=**} {
      allow read: if true;  // Todos pueden leer
      allow write: if false; // Nadie puede escribir (solo admins desde consola)
    }
    
    // Colección de gastos - Lectura pública, escritura limitada
    match /gastos/{gastoId} {
      allow read: if true;  // Todos pueden ver gastos
      
      // Permitir crear gastos con validaciones básicas
      allow create: if request.resource.data.keys().hasAll([
        'descripcion', 'monto', 'fecha', 'categoria', 
        'comprobanteAdjunto', 'registrado', 'creadoPor', 'fechaCreacion'
      ])
      && request.resource.data.monto is number
      && request.resource.data.monto > 0
      && request.resource.data.categoria in ['presupuesto', 'viaticos']
      && request.resource.data.descripcion is string
      && request.resource.data.descripcion.size() > 3
      && request.resource.data.comprobanteAdjunto is bool
      && request.resource.data.registrado == false;  // Nuevos gastos siempre empiezan como no registrados
      
      // Permitir actualizar solo el campo 'registrado' (para aprobar gastos)
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['registrado', 'fechaRegistro', 'registradoPor']);
      
      // Permitir eliminar gastos
      allow delete: if true;
    }
    
    // Colección de prueba - Escritura permitida solo para testing
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // Todas las demás colecciones - Sin acceso
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
